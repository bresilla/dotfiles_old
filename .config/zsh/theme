#!/usr/bin/env zsh

esc=$'['
end_esc=m
local noprint='%{'
local end_noprint='%}'
local IN="$noprint$esc"
local EN="$end_esc$end_noprint"
local space=" "
local arrFL="î‚°"
local arrFR="î‚²"
local arrEL="î‚±"
local arrER="î‚³"
local endARR="î‚±"
local defaultFG="${IN}0${EN}"
local defaultBG="${IN}49${EN}"
local foreground="${IN}38;5;15${EN}"
local background="${IN}48;5;0${EN}"
local blackTX="${IN}38;5;0${EN}"
local accentBG="${IN}48;5;1${EN}"
local accentTX="${IN}38;5;1${EN}"
local primeTX="${IN}38;5;1${EN}"
local secondTX="${IN}38;5;2${EN}"
local greyBG="${IN}48;5;8${EN}"
local greyTX="${IN}38;5;8${EN}"
local darkTX="${IN}38;5;59${EN}"
local redTX="${IN}38;5;124${EN}"
local redBG="${IN}48;5;124${EN}"
local blueTX="${IN}38;5;27${EN}"
local blueBG="${IN}48;5;27${EN}"
local greenTX="${IN}38;5;40${EN}"
local greenBG="${IN}48;5;40${EN}"
local conTX=$darkTX
local NLD="\e[0m"
local BLD="\e[32;1m"


function preexec() {
    timer=${timer:-$SECONDS}
}

function precmd() {
    if [ $timer ]; then
        export timer_show=$(($SECONDS - $timer))
        unset timer
    fi
}

function __promptline_host {
    local only_if_ssh="0"
    if [ $only_if_ssh -eq 0 -o -n "${SSH_CLIENT}" ]; then
        if [[ -n ${ZSH_VERSION-} ]]; then print %m; elif [[ -n ${FISH_VERSION-} ]]; then hostname -s; else printf "%s" \\h; fi
    fi
}
function __sudo_warning {
    [[ $(trap "" XFSZ; limit filesize 0; LC_ALL=C sudo -n true 2>&1) != *"password is required" ]] && printf 'SUDO'
}

function __vi_mode_select {
    printf "${${KEYMAP/vicmd/NORMAL}/(main|viins)/INSERT}"
}

function __load_average {
    eval loadav01=$(uptime | awk ' {print substr($0,length($0)-15)}' | awk '{print $1}' | sed 's/,//g')
    printf "$loadav01"
}

function __promptline_vcs_branch {
    local branch
    if hash git 2>/dev/null; then
        if branch=$( { git symbolic-ref --quiet HEAD || git rev-parse --short HEAD; } 2>/dev/null ); then
        branch=${branch##*/}
        printf "%s" "${branch:-unknown}"
        return
        fi
    fi
    return 1 
}

function __is_in_container {
    [[ -n $(awk -F/ '$2 == "docker"' /proc/self/cgroup) ]] && printf 'â– '
    [[ -n $(echo $IN_NIX_SHELL) ]] && printf 'Ã—'
}

function __promptline_cwd {
    local dir_limit="4"
    local truncation="â‹¯"
    local first_char
    local part_count=0
    local formatted_cwd=""
    local dir_sep=" î‚± "
    local tilde="~"
    local cwd="${PWD/#$HOME/$tilde}"
    [[ -n ${ZSH_VERSION-} ]] && first_char=$cwd[1,1] || first_char=${cwd::1}
    cwd="${cwd#\~}"
    while [[ "$cwd" == */* && "$cwd" != "/" ]]; do
        local part="${cwd##*/}"
        cwd="${cwd%/*}"
        formatted_cwd="$dir_sep$part$formatted_cwd"
        part_count=$((part_count+1))
        [[ $part_count -eq $dir_limit ]] && first_char="$truncation" && break
    done
    printf "%s" "$first_char$formatted_cwd"
}

function __get_username {
    whoami
}

function __promptline_left_prompt {
    #HOST
    prefix="${accentBG}${space}" suffix="${space}${background}${accentTX}${arrFL}${blackTX}${accentBG}"; printf "%s" "$prefix" '$(__promptline_host)' "$suffix"
    #USER
    prefix="${greyBG}${arrFL}${blackTX}${greyBG}${space}" suffix="${space}${greyTX}"; printf "%s" "$prefix" '$(__get_username)' "$suffix"
    #SUDO WARN
    prefix="${redBG}${arrFL}${foreground}${redBG}${space}" suffix="${space}${redTX}"; [[ -n $(__sudo_warning) ]] && printf "%s" "$prefix" '$(__sudo_warning)' "$suffix"
    #CONTAINER
    prefix="${background}${arrFL}${blackTX}${accentBG}${arrFL}${foreground}${accentBG}${space}" suffix="${space}${accentTX}"; [[ -n $(__is_in_container) ]] && printf "%s" "$prefix" '$(__is_in_container)' "$suffix"
    [[ -n $(__is_in_container) ]] && endARR="$arrEL$redBG$blackTX$arrFL$redBG$redTX$background$arrFL$greyTX"
    #PATH
    prefix="${defaultBG}${arrFL}${darkTX}${space}" suffix="$space${blackTX}"; [[ -n $(__promptline_cwd) ]] && printf "%s" "$prefix" '$(__promptline_cwd)' "$suffix"
    ### END
    printf "%s" "$defaultFG${darkTX}${arrEL}${space}$defaultFG"
}

function __promptline_right_prompt {
    #WARN
    prefix="${space}${redTX}${arrFR}${redBG}${blackTX}" suffix="${space}${blackTX}${arrFR}${darkTX}${background}"; [[ $last_exit_code -gt 0 ]] && printf "%s" "$prefix " $last_exit_code "$suffix"
    #GIT
    [[ $(__promptline_vcs_branch) = "master" ]] && conTX=$greenTX
    prefix="${greyTX}${arrER}${space}${conTX}" suffix="${space}${darkTX}"; [[ -n $(__promptline_vcs_branch) ]] && printf "%s" "$prefix" '$GITSTATUS_PROMPT' "$suffix"
    #CMD TIME
    prefix="${greyTX}${arrER}${arrFR}${blackTX}${greyBG}${space}" suffix="${space}${blackTX}${arrER}"; [[ -n $timer_show ]] && printf "%s" "$prefix" "$timer_show" "$suffix"
    #LOAD AVERAGE
    prefix="${greyTX}${arrFR}${blackTX}${greyBG}${space}" suffix="${space}${greyTX}"; printf "%s" "$prefix" '$(__load_average)' "$suffix"
    #VIM MODE
    prefix="${accentTX}${arrFR}${foreground}${accentBG}${space}" suffix="${space}${accentTX}"; printf "%s" "$prefix" '$(__vi_mode_select)' "$suffix"
}

function __promptline_runner_prompt {
    runn=">"
}

function __promptline {
    last_exit_code="${PROMPTLINE_LAST_EXIT_CODE:-$?}"
    PROMPT="$(__promptline_left_prompt)$defaultFG$(__promptline_runner_prompt)"
    RPROMPT="$(__promptline_right_prompt)$defaultFG"
}

precmd_functions+=(__promptline)
